<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginTop="20dp"
    android:padding="10dp"
    android:background="@drawable/custom_listcard"

    >


    <ImageView
        android:id="@+id/iv_parkingimage"
        android:layout_width="145dp"
        android:layout_height="125dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/rounded_parkingimage"
        />

    <TextView
        android:id="@+id/tv_parkingtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:text="Parking Title"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_parkingimage"
        app:layout_constraintStart_toEndOf="@+id/iv_parkingimage"
        app:layout_constraintTop_toTopOf="@+id/iv_parkingimage"
        app:layout_constraintVertical_bias="0.414" />

    <TextView
        android:id="@+id/tv_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:text="Location"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_parkingimage"
        app:layout_constraintStart_toEndOf="@+id/iv_parkingimage"
        app:layout_constraintTop_toBottomOf="@+id/tv_parkingtitle"
        app:layout_constraintVertical_bias="0.114" />

    <TextView
        android:id="@+id/tv_parkingstate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="24dp"
        android:text="Parking state"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/iv_parkingimage"
        app:layout_constraintTop_toTopOf="@+id/iv_parkingimage" />

    <TextView
        android:id="@+id/tv_occupation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="occupation"
        android:textSize="12sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_parkingstate"
        app:layout_constraintStart_toEndOf="@+id/tv_parkingstate" />

    <TextView
        android:id="@+id/tv_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Distance"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView3"
        app:layout_constraintStart_toEndOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="@+id/imageView3" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="13dp"
        android:layout_height="16dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/iv_parkingimage"
        app:layout_constraintTop_toBottomOf="@+id/iv_parkingimage"
        app:srcCompat="@drawable/ic_car_black" />

    <TextView
        android:id="@+id/tv_hyphen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="-"
        app:layout_constraintBottom_toBottomOf="@+id/tv_distance"
        app:layout_constraintStart_toEndOf="@+id/tv_distance"
        app:layout_constraintTop_toTopOf="@+id/tv_distance" />

    <TextView
        android:id="@+id/tv_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:text="Duration"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_hyphen"
        app:layout_constraintEnd_toEndOf="@+id/iv_parkingimage"
        app:layout_constraintStart_toEndOf="@+id/tv_hyphen"
        app:layout_constraintTop_toTopOf="@+id/tv_hyphen" />



</androidx.constraintlayout.widget.ConstraintLayout>