<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:background="@drawable/custom_listcard"
        android:id="@+id/reservation_item"
        >


        <ImageView
            android:id="@+id/iv_parkingimage"
            android:layout_width="145dp"
            android:layout_height="125dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/rounded_parkingimage"
            />

        <TextView
            android:id="@+id/tv_parkingtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="Parking Title"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/iv_parkingimage"
            app:layout_constraintStart_toEndOf="@+id/iv_parkingimage"
            app:layout_constraintTop_toTopOf="@+id/iv_parkingimage"
            app:layout_constraintVertical_bias="0.414" />

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="Price"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="@+id/iv_parkingimage"
            app:layout_constraintStart_toEndOf="@+id/iv_parkingimage"
            app:layout_constraintTop_toBottomOf="@+id/tv_parkingtitle"
            app:layout_constraintVertical_bias="0.114" />

        <TextView
            android:id="@+id/tv_datereservation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="24dp"
            android:text="Date"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/iv_parkingimage"
            app:layout_constraintTop_toTopOf="@+id/iv_parkingimage" />

        <TextView
            android:id="@+id/tv_entrytime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="Entry"
            android:textSize="12sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/tv_datereservation"
            app:layout_constraintStart_toEndOf="@+id/tv_datereservation" />

    <TextView
        android:id="@+id/tv_exittime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="Entry"
        android:textSize="12sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_entrytime"
        app:layout_constraintStart_toEndOf="@+id/tv_entrytime" />



    </androidx.constraintlayout.widget.ConstraintLayout>
